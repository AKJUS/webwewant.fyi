{% from "macros.njk" import event %}

<section id="events">
  <h2>Upcoming Events</h2>

  {% set upcoming_events = events | future_events | sort(attribute="start_date") | limit(3) %}
  <ul class="events">
  {% for e in upcoming_events %}
    {{ event( 'li', e.title, e.location, e.start_date, e.url ) }}
  {% endfor %}
  </ul>

</section>