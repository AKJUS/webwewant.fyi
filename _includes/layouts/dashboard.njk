---
layout: layouts/base.njk
---
{% from "macros.njk" import want %}

<h1>{{ title | widont  }}</h1>

{{ content | safe }}

<div class="dashboard">

  {% for tag in collections.tags %}
    <section id="{{ tag }}" class="dashboard__item">
      <h2>{{ tag | unslug | fixNames }}</h2>
      <ul class="wants">
        {% for w in collections.topWantsPerTag[tag] %}
          {{ want( 'li', '', w.url, 'h3', w.data.title, w.data.submitter ) }}
          <br/>
          Votes: {{ w.data.votes }}
        {% endfor %}
      </ul>
    </section>
  {% endfor %}

</div>
