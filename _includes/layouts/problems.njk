---
layout: layouts/base.njk
section: problems
permalink: /problems/index.html
---

<h1>{{ title | widont }}</h1>

{{ layoutContent | safe }}

{% set problems = collections.problems %}
{% if problems.length > 0 %}
<ul class="problems">
  {% for problem in problems %}
    <li class="problem">
      <h2><a class="problem__title" href="{{ problem.url }}">{{ problem.data.title | widont }}</a></h2>
      <p class="problem__meta">Submitted by {{ problem.data.submitter }}</p>
    </li>
  {% endfor %}
</ul>
{% else %}
  <p>No one has submitted a problem yet. <a href="/#submit">Wanna be the first?</a></p>
{% endif %}