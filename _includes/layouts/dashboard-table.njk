---
layout: layouts/base.njk
---
<h1>{{ title | widont  }}</h1>

{{ layoutContent | safe }}

<br/>Gregwants Count: {{ collections.gregswants.length }}
<br/>Webmention Count: {{ webmentions.children.length}}
<br/>Tag Count: {{collections.tags.length}}

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Votes</th>
            <th>Tags</th>
        </tr>
    </thead>
{% for w in collections.wantsWithItem %}
    {% set url %}{{ 'https://webwewant.fyi/wants/' }}{{ w.url | extractID }}{{ '/' }}{% endset %}
    <tr>
        <td class="dashboard-id">
            <!-- ID -->
            <a href="{{url}}">{{ w.url | extractID }}</a>
        </td>
        <td class="dashboard-votes">
            <!-- Votes -->
            {{ webmentions.children | votesForWant( url ) }}<br/>
        </td>
        <td class="dashboard-tags">
            <!-- Tags -->
            {{ w.data.tags }}
        </td>
    </tr>
{% endfor %}
</table>